{
  "name": "html2md",
  "version": "0.0.0",
  "description": "Convert HTML pages into clean, readable Markdown content using Mozilla's Readability and Turndown",
  "keywords": ["readability", "markdown", "turndown", "mozilla", "converter", "html-to-markdown"],
  "homepage": "https://github.com/ericc-ch/html2md#readme",
  "bugs": "https://github.com/ericc-ch/html2md/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/html2md.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.16",
    "@types/node": "^22.13.0",
    "bumpp": "^10.0.1",
    "eslint": "^9.19.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vite": "^6.0.11",
    "vitest": "^3.0.4"
  },
  "packageManager": "pnpm@10.1.0",
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "turndown": "^7.1.2"
  }
}
