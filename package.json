{
  "name": "crawldown",
  "version": "0.0.11",
  "description": "Crawl websites and convert their content into clean, readable Markdown using Mozilla's Readability and Turndown",
  "keywords": [
    "web-crawler",
    "readability",
    "markdown",
    "turndown",
    "mozilla",
    "converter",
    "html-to-markdown",
    "website-scraper"
  ],
  "homepage": "https://github.com/ericc-ch/crawldown#readme",
  "bugs": "https://github.com/ericc-ch/crawldown/issues", 
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/crawldown.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "bin": {
    "crawldown": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish --access public",
    "start": "tsx src/cli.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "citty": "^0.1.6",
    "consola": "^3.4.0",
    "defu": "^6.1.4",
    "jsdom": "^26.0.0",
    "p-limit": "^6.2.0",
    "playwright": "^1.50.1",
    "turndown": "^7.2.0",
    "ufo": "^1.5.4"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.16",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.1",
    "@types/turndown": "^5.0.5",
    "bumpp": "^10.0.1",
    "eslint": "^9.19.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.5"
  },
  "packageManager": "pnpm@10.2.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  }
}
