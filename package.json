{
  "name": "html2md",
  "version": "0.0.0",
  "description": "Convert HTML pages into clean, readable Markdown content using Mozilla's Readability and Turndown",
  "keywords": [
    "readability",
    "markdown",
    "turndown",
    "mozilla",
    "converter",
    "html-to-markdown"
  ],
  "homepage": "https://github.com/ericc-ch/html2md#readme",
  "bugs": "https://github.com/ericc-ch/html2md/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/html2md.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    }
  },
  "bin": {
    "html2md": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/cli.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "citty": "^0.1.6",
    "consola": "^3.4.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.50.1",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.16",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.0",
    "@types/turndown": "^5.0.5",
    "bumpp": "^10.0.1",
    "eslint": "^9.19.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.4"
  },
  "packageManager": "pnpm@10.1.0+sha512.c89847b0667ddab50396bbbd008a2a43cf3b581efd59cf5d9aa8923ea1fb4b8106c041d540d08acb095037594d73ebc51e1ec89ee40c88b30b8a66c0fae0ac1b",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  }
}
